javascript:var a=prompt("Paste the script to encode ASCII HEX (Only Special Chars)","<sCrIpT>alert(\"XSS\")</sCrIpT>");function ascii(str){var arr1 = [];for (var n = 0, l = str.length; n < l; n ++){var hex = Number(str.charCodeAt(n));if (hex >= 65 && hex <=90){console.log(str[n] + " - mayuscula - " +hex);arr1.push(str[n]);}else if (hex >= 97 && hex <=122){	console.log(str[n] + " - minuscula - " + hex);arr1.push(str[n]);}else{arr1.push('%');arr1.push(hex.toString(16));console.log(str[n] + " - special char - %" +hex.toString(16))}};return arr1.join('');};prompt("Press CTRL + C to copy to clipboard", ascii(a));
